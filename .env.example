# QuickBuild 14 Containerization Environment Variables
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION (Microsoft SQL Server)
# =============================================================================

# SQL Server SA (System Administrator) password
# Must be at least 8 characters with uppercase, lowercase, number, and special character
MSSQL_SA_PASSWORD=YourStrongPassword123!

# QuickBuild database user password
# Used by QB server to connect to database
QB_DB_PASSWORD=QBUserPassword123!

# SQL Server Product ID (Express = free edition)
MSSQL_PID=Express

# SQL Server Collation
MSSQL_COLLATION=SQL_Latin1_General_CP1_CI_AS

# =============================================================================
# QUICKBUILD SERVER CONFIGURATION
# =============================================================================

# Database connection settings
QB_DB_TYPE=mssql
QB_DB_HOST=qb-database
QB_DB_PORT=1433
QB_DB_NAME=quickbuild
QB_DB_USER=qb_user

# QuickBuild server URL (used by agents to connect)
QB_SERVER_URL=http://qb-server:8810

# Server HTTP port
QB_SERVER_PORT=8810

# =============================================================================
# BUILD AGENT CONFIGURATION
# =============================================================================

# Agent communication port
AGENT_PORT=8811

# Number of agents to start (for scaling)
AGENT_REPLICAS=2

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================

# Docker Compose project name
COMPOSE_PROJECT_NAME=quickbuild14

# Network subnet for qb-net
QB_NETWORK_SUBNET=172.20.0.0/16

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================

# Kubernetes namespace
QB_NAMESPACE=quickbuild

# Storage class for persistent volumes
QB_STORAGE_CLASS=standard

# Database storage size
DB_STORAGE_SIZE=10Gi

# Server storage size  
SERVER_STORAGE_SIZE=20Gi

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable TLS/SSL (set to 'true' for production)
QB_ENABLE_TLS=false

# TLS certificate paths (when TLS enabled)
QB_TLS_CERT_PATH=/etc/ssl/certs/qb-server.crt
QB_TLS_KEY_PATH=/etc/ssl/private/qb-server.key

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARN, ERROR)
QB_LOG_LEVEL=INFO

# Enable health checks
QB_ENABLE_HEALTH_CHECKS=true

# Health check interval (seconds)
QB_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Backup storage path
BACKUP_PATH=./backups

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================

# Enable debug mode (development only)
QB_DEBUG_MODE=false

# Skip vulnerability scanning (development only)
SKIP_SECURITY_SCAN=false

# Use local images instead of pulling from registry
USE_LOCAL_IMAGES=false